{
  "name": "euphrosyne",
  "stack": "scalingo-18",
  "env": {
    "ALLOWED_HOSTS": {
      "value": ".scalingo.io"
    },
    "DISABLE_COLLECTSTATIC": {
      "value": ""
    },
    "DJANGO_DEBUG": {
      "value": ""
    },
    "DJANGO_SECRET_KEY": {
      "generator": "secret"
    },
    "PR_NUMBER": {
      "generator": "template",
      "template": "%PR_NUMBER%"
    },
    "SITE_URL": {
      "generator": "url",
      "template": "%URL%"
    },
    "S3_BUCKET_NAME": {
      "generator": "template",
      "template": "%APP%"
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "scripts": {
    "first-deploy": "./scripts/replicate_staging_db.sh $PR_NUMBER && ./postdeploy"
  }
}
